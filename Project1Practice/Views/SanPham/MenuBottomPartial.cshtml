@using Project1Practice.Models

@model IEnumerable<SanPham>

<div class=" bottom-product">
    <h2 style="color:black;font-weight:bold; text-align:center">TOP Truyện được bình chọn</h2><br />
    @foreach (var item in Model.Take(3))
    {
        <div class="col-md-4 bottom-cd simpleCart_shelfItem">
            <div class="product-at ">
                <a href="@Url.Action("ChiTietSanPham","SanPham", new {@MaSP = item.MaSP})">
                    <img style="height:300px;width:210px;margin-left:18px;border:1px black solid;" src="@Url.Content("~/Content/HinhAnhSP/" + item.HinhAnh)" alt="">
                    <div class="pro-grid">
                        <span class="buy-in">Muy Ngay</span>
                    </div>
                </a>
            </div>
            <p class="tun" style="color:black;">@item.MoTa</p>
            <a href="@Url.Action("ThemGioHang","GioHang", new {@MaSP = item.MaSP, @strURL = Request.Url.ToString()})" class="item_add"><p class="number item_price"><i> </i>@item.DonGia.Value.ToString("#,##") VNĐ</p></a>
        </div>
    }
    <div class="clearfix"> </div>
</div>
