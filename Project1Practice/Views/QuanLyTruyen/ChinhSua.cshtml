@model Project1Practice.Models.Truyen

@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<p class="home"><a href="#">Quản lý</a> > <strong> Quản lý Truyện</strong></p>
<br />
<h2>CHỈNH SỬA TRUYỆN</h2>

@using (Html.BeginForm("ChinhSua", "QuanLyTruyen", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Hidden("MaTruyen", Model.MaTruyen)

    <div class="form-group">
        @Html.LabelFor(model => model.TenTruyen, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.TenTruyen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenTruyen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-warning" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại", "Index", new { @class = "btn btn-warning" })
</div>
