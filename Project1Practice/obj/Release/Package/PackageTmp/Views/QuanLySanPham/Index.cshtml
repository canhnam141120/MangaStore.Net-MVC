@model IEnumerable<Project1Practice.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //Khởi tạo control WebGrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}
<p class="home"><a href="#">Quản lý</a> > <strong> Quản lý sản phẩm</strong></p>
<br />
<h2>QUẢN LÝ SẢN PHẨM</h2>
<p>
    @Html.ActionLink("Thêm sản phẩm", "TaoMoi",null, new { @class= "btn btn-warning" })
</p>
<br />
<br />
@*Thể hiện dữ liệu thông qua control WebGrid*@
@grid.GetHtml(
    tableStyle: "divTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP", "Mã sản phẩm"),
    grid.Column("TenSP", "Tên sản phẩm"),
    grid.Column("HinhAnh", "Hình ảnh sản phẩm", format: p => Html.Raw("<img width=\"150\" src=\"../Content/HinhAnhSP/" + p.HinhAnh + "\">")),
    grid.Column("SoLuongTon", "Số lượng tồn"),
    grid.Column(format: p => @Html.ActionLink("Sửa", "ChinhSua", new { id = p.MaSP })),
    grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.MaSP }))
    )
)

@*Css cho từng Style của table*@
<style>
    .divTable{
        width:100%;
        border:1px solid black;
    }
    .divTable td{
        border:1px black solid;
    }
    .gridHead{background-color:orange;}
    .gridHead > th > a{color:#fff}
    .gridFooter{
        font-weight:bold;
    }
</style>



