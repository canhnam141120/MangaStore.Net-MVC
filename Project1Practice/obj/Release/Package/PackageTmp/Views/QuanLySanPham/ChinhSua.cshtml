        </div>
    </div>

    @*Bước 2: Tạo 1 thẻ input với type="file" để lưu giá trị hình ảnh*@
    <div class="form-group">
        @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            <input name="HinhAnh" type="file" />
            <span style="color:red">@ViewBag.Upload</span>
            <br />
            <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.HinhAnh)" width="150" height="230" />
