@using Project1Practice.Models;

<div class="header-top">
    <div class="container">
        <div class="search">
            @using (Html.BeginForm("TimKiem", "TimKiem"))
            {
                <input type="text" name="sTuKhoa" placeholder="Tên sản phẩm">
                <input type="submit" value="Tìm">
            }

        </div>
        <div class="header-left">
            <ul>
                @if (Session["TaiKhoan"] != null && Session["TaiKhoan"] != "")
                {
                    ThanhVien tv = (ThanhVien)Session["TaiKhoan"];
                    <li><a>Chào @tv.HoTen</a> </li>
                    if (tv.MaLoaiTV == 1 || tv.MaLoaiTV == 5)
                    {
                        <li>@Html.ActionLink("Quản trị", "Index", "QuanLySanPham");</li>
                    }
                    <li>@Html.ActionLink("Đăng Xuất", "DangXuat", "Home");</li>
                }
                else
                {
                    <li>@Html.ActionLink("Đăng Nhập", "DangNhap", "Home")</li>
                    <li>@Html.ActionLink("Đăng Ký", "DangKy", "Home")</li>
                }
            </ul>
            @Html.Action("GioHangPartial", "GioHang");
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>

